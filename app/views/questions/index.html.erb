<div>
  <% @questions.each do |question| %>
  <div>
    <div><%= question.votes.sum(:type) %> votes
    </div>
    <div><%= question.answers.count %> answers
    </div>
    <div><%= question.views %> views
    </div>
    <div><a href="questions/<%= question.id %>"><%= question.title %></a>
    </div>
    <hr>
  </div>
  <% end %>
</div>
